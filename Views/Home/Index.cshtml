@{
    ViewData["Title"] = "Dashboard";
}

<div class="Content grid [grid-template-rows:100px_1fr_auto] [grid-template-areas:'header'_'main'_'footer']">
    
    <header class="[grid-area:header]">
        <div class="">
            <h1 class="text-2xl font-bold py-5 px-8">Dashboard</h1>
        </div>
    </header>

    <main class="[grid-area:main]">
        
        <div class="mb-10 container mx-auto">
            <div class="border-2 border-dashed border-gray-300 rounded-lg p-10 text-center text-gray-500">
                Aquí se cargan las Cards (Resumen)
            </div>
        </div>
        
        <div class="container mx-auto shadow-2xl rounded-lg bg-white pb-5">
            
